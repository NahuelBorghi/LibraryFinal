@model List<User>

<h1>Index</h1>

<p>
    <a href="@Url.Action("Create", "Users")">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nombre de Usuario
            </th>
            <th>
                Rol
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                <a asp-action="Edit" asp-controller="Users" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-controller="Users" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-controller="Users" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
